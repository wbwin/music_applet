

.bg-img{
  width: 100%;
  height: 480rpx;
  position: relative;
  background:#333;
  background-size:100% 100%;
  padding:1px;
  box-sizing:border-box;
  z-index:1;
}
.bg-img::after{
    content: "";
    width:100%;
    height:480rpx;
    position: absolute;
    left:0;
    top:0;
    background: inherit;
    filter: blur(2px);
    z-index: 2;
}
.filter-bg{
  font-size: 28rpx;
  color: #fff;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 480rpx;
  z-index: 3;
  padding: 0 30rpx 0 40rpx;
}

.header-center{
  display: flex;
  font-size: 32rpx;
  flex-direction: row;
  /* justify-content: space-between; */
  align-items: center;
  margin-top: 100rpx;
}
.header-center-img{
  width: 200rpx;
  height:200rpx;
  border-radius: 7rpx;
}
.user-info{
  margin-left: 40rpx;
}
.user-name{
  display: block;
  font-size: 40rpx;
  margin-bottom: 40rpx;
}
.user-message{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.user-image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.user-tips{
  margin-top: 30rpx;
}
.user-tips-text{
  padding: 5rpx 30rpx;
  margin-right: 10rpx;
  background: rgba(255,255,255,0.5);
  border-radius: 30rpx;
  
}
.music-content{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
}
.music-content-main{
  background-color: #fff;
  border-top-left-radius: 25rpx;
  border-top-right-radius:25rpx;
  font-size: 30rpx;
  z-index: 999;
}
.music-bar{
  padding: 25rpx 0;
  display: flex;
  flex-direction: row;
}
.music-bar-text{
  flex: 1;
  text-align: center;
}
.music-count{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 15rpx;
  background: #f1f1f1;
  font-size: 24rpx;
  color: #999;
}
.music-main{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 15rpx 10rpx;
  border-top: 1px solid #f1f1f1;
  border-bottom: 1px solid #f1f1f1;
}
.music-main-image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 7rpx;
}
.music-main-numb{
  font-size: 36rpx;
  color: #999;
  margin: 0 25rpx 0 35rpx;
}
.music-main-introduce{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.music-introduce-name{
  width: 600rpx;
  font-size: 36rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.music-introduce-count{
  display: inline-block;
  width: 600rpx;
  font-size: 25rpx;
  color: #999;
  margin-top: 5rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  
}